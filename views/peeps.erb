<html>
  <head></head>
  <body style="background-color: #ff6347;">
    <h1>Chitter - All Peeps!</h1>
    <h2>Latest peep is from:
      @<%= @peeps.last.user_handle %>
    </h2>
    <hr>
    <% @peeps.reverse.each do |peep| %>
      <div>
        <%= peep.user_f_name %>
        </br>
        @<%= peep.user_handle %>
        </br>
        <%= peep.date_time %>
        </br>
        <%= peep.content %>
        <hr>
      </div>      
    <% end %>
  </body>
</html>